{
  "extends": "stylelint-config-standard",
  "rules": {
    "selector-list-comma-newline-after": null,
    "declaration-empty-line-before": ["always", {
      except: [
        "first-nested"
      ],
      ignore: [
        "after-comment",
        "inside-single-line-block",
        "after-declaration"
      ],
    }]
  }
}